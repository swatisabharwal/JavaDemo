		List<String> Alist = new ArrayList<String>();
		
			
		
	}
	
	
	
	

	public static void main(String[] args) throws IOException {
		doc = Jsoup.connect("http://timesofindia.indiatimes.com/").get();
		System.out.println("*****************************");
		fetch_All_Links();
		System.out.println("*****************************");
		fetch_all_Images();
		
		
